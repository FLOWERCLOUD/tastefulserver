#pragma once

#include <QAbstractSocket>
#include <QUdpSocket>
#include <QTcpSocket>
#include <QSslSocket>
#include <QSslCertificate>
#include <QSslKey>

namespace internal {
	
class SocketCreation {
	public:
		SocketCreation(int socketDescriptor);
		virtual QAbstractSocket* operator()() = 0;
	
		virtual bool isTcp();
		virtual bool isSsl();
		virtual bool isUdp();
	protected:
		int socketDescriptor;
};

class UdpSocketCreation : public SocketCreation {
	public:
		UdpSocketCreation(int socketDescriptor);
		virtual QAbstractSocket* operator()();

		virtual bool isUdp();
};

class TcpSocketCreation : public SocketCreation {
	public:
		TcpSocketCreation(int socketDescriptor);
		virtual QAbstractSocket* operator()();
		
		virtual bool isTcp();
};

class SslSocketCreation : public TcpSocketCreation {
	public:
		SslSocketCreation(int socketDescriptor, QSslCertificate certificate, QSslKey privateKey);
		virtual QAbstractSocket* operator()();
	
		virtual bool isSsl();
	protected:
		QSslCertificate certificate;
		QSslKey privateKey;
};

}

